{
  "manifest_version": 3,
  "name": "SnowClip",
  "version": "1.0.0",
  "description": "雪花剪藏 - 纯净网页内容提取工具",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-element-selection": {
      "suggested_key": {
        "default": "Alt+Shift+X",
        "mac": "Command+Shift+X"
      },
      "description": "Toggle Element Selection Mode"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/jszip.min.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
